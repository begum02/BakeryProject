 @model BakerUI.Dto.TestimonialDto.UpdateTestimonialDto
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yorum Güncelle</h4>
            <p class="card-description">Müşteri yorumunu düzenle</p>

            <form asp-action="UpdateTestimonial" method="post" class="forms-sample">

                <!-- ID göndermezsen API hangisini update edeceğini bilemez -->
                <input type="hidden" asp-for="TestimonialId" />

                <div class="form-group">
                    <label>Ad Soyad *</label>
                    <input asp-for="NameSurname" class="form-control" />
                    <span asp-validation-for="NameSurname" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label>Ünvan *</label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label>Yorum *</label>
                    <textarea asp-for="Comment" class="form-control" rows="4"></textarea>
                    <span asp-validation-for="Comment" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label>Görsel Url</label>
                    <input asp-for="ImageUrl" class="form-control" />
                </div>

       

                <button type="submit" class="btn btn-gradient-primary me-2">
                    Güncelle
                </button>

                <a asp-action="Index" class="btn btn-light">İptal</a>
            </form>
        </div>
    </div>
</div>
