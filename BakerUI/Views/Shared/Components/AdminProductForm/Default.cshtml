@model BakerUI.Dto.ProductDto.CreateProductDto

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Yeni Ürün Ekle</h4>

        <form asp-controller="Product" asp-action="CreateProduct" method="post" class="forms-sample">
            @Html.AntiForgeryToken()
            <div class="form-group">
                <label>Ürün Adı *</label>
                <input asp-for="ProductName" class="form-control" placeholder="Ürün adı yazın" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>Fiyat *</label>
                <input asp-for="Price" type="number" step="0.01" class="form-control" placeholder="0.00" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>Görsel Url *</label>
                <input asp-for="ImageUrl" class="form-control" placeholder="https://..." />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>Açıklama</label>
                <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>Kategori *</label>
                <select asp-for="CategoryId" class="form-control" asp-items="@ViewBag.Categories">
                    <option value="">-- Kategori Seçin --</option>
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-gradient-primary me-2">Kaydet</button>
            <a asp-controller="Product" asp-action="ProductList" class="btn btn-light">Vazgeç</a>

        </form>
    </div>
</div>
