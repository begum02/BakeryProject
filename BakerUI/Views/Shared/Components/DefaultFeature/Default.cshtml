@model List<BakerUI.Dto.FeatureDto.ResultFeatureDto>

<div class="container-fluid p-0 pb-5 wow fadeIn" data-wow-delay="0.1s">
    <div class="owl-carousel header-carousel position-relative">

        @foreach (var item in Model)
        {
            <div class="owl-carousel-item position-relative">
                <img class="img-fluid" src="@item.ImageUrl" alt="@item.Title">

                <div class="owl-carousel-inner">
                    <div class="container">
                        <div class="row justify-content-start">
                            <div class="col-lg-8">
                                <p class="text-primary text-uppercase fw-bold mb-2">
                                    @(string.IsNullOrWhiteSpace(item.SubTitle) ? "// The Best Bakery" : item.SubTitle)
                                </p>

                                <h1 class="display-1 text-light mb-4 slideInDown">
                                    @item.Title
                                </h1>

                                <p class="text-light fs-5 mb-4 pb-3">
                                    @item.Description
                                </p>

                                <a href="#" class="btn btn-primary rounded-pill py-3 px-5">Read More</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }

    </div>
</div>
