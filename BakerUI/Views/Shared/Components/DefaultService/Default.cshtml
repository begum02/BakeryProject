@model BakerUI.Dto.ServiceDto.ResultServiceDto

@{
    // null güvenliği
    var items = Model?.Items ?? new List<BakerUI.Dto.ServiceDto.ServiceItemDto>();
}

@if (!string.IsNullOrWhiteSpace(Model?.Title) || items.Any())
{
    <div class="container-xxl py-6">
        <div class="container">
            <div class="row g-5">

                <!-- SOL TARAF -->
                <div class="col-lg-6 wow fadeInUp" data-wow-delay="0.1s">

                    <p class="text-primary text-uppercase mb-2">// Hizmetlerimiz</p>

                    @if (!string.IsNullOrWhiteSpace(Model?.Title))
                    {
                        <h1 class="display-6 mb-4">@Model.Title</h1>
                    }

                    @if (!string.IsNullOrWhiteSpace(Model?.Description))
                    {
                        <p class="mb-5">@Model.Description</p>
                    }

                    <div class="row gy-5 gx-4">
                        @foreach (var item in items)
                        {
                            <div class="col-sm-6 wow fadeIn">
                                <div class="d-flex align-items-center mb-3">
                                    <div class="flex-shrink-0 btn-square bg-primary rounded-circle me-3">
                                        <i class="@item.Icon text-white"></i>
                                    </div>
                                    <h5 class="mb-0">@item.Title</h5>
                                </div>
                                <span>@item.Description</span>
                            </div>
                        }
                    </div>
                </div>

                <!-- SAĞ TARAF -->
                <div class="col-lg-6 wow fadeInUp" data-wow-delay="0.5s">
                    <div class="row img-twice position-relative h-100">
                        <div class="col-6">
                            @if (!string.IsNullOrWhiteSpace(Model?.ImageUrl1))
                            {
                                <img class="img-fluid rounded" src="@Model.ImageUrl1" alt="">
                            }
                        </div>
                        <div class="col-6 align-self-end">
                            @if (!string.IsNullOrWhiteSpace(Model?.ImageUrl2))
                            {
                                <img class="img-fluid rounded" src="@Model.ImageUrl2" alt="">
                            }
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
}
