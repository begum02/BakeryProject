@model BakerUI.Dto.AboutDto.CreateAboutDto

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">About Ekle</h4>

            <form asp-action="Create" method="post" class="forms-sample">

                <div class="form-group">
                    <label>Başlık</label>
                    <input asp-for="Title" class="form-control" placeholder="Başlık" />
                </div>

                <div class="form-group">
                    <label>Görsel 1</label>
                    <input asp-for="ImageUrl1" class="form-control" placeholder="https://..." />
                </div>

                <div class="form-group">
                    <label>Görsel 2</label>
                    <input asp-for="ImageUrl2" class="form-control" placeholder="https://..." />
                </div>

                <div class="form-group">
                    <label>Açıklama</label>
                    <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                </div>

                <hr />

                <h5>About Maddeleri</h5>

                <div id="itemList">
                    <div class="form-group">
                        <input name="Items[0]" class="form-control" placeholder="Madde yazın" />
                    </div>
                </div>

                <button type="button" class="btn btn-sm btn-info" onclick="addItem()">
                    + Madde Ekle
                </button>

                <br /><br />

                <button type="submit" class="btn btn-gradient-primary me-2">Kaydet</button>
                <a asp-action="Index" class="btn btn-light">İptal</a>

            </form>
        </div>
    </div>
</div>

<script>
    let itemIndex = 1;

    function addItem() {
        const div = document.createElement("div");
        div.className = "form-group";
        div.innerHTML = `<input name="Items[${itemIndex}]" class="form-control mt-2" placeholder="Madde yazın" />`;
        document.getElementById("itemList").appendChild(div);
        itemIndex++;
    }
</script>
