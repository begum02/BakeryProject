@model List<BakerUI.Dto.ChefDto.ResultChefDto>

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Şef Listesi</h4>
            <p class="card-description">
                Sistemde kayıtlı şefler aşağıda yer almaktadır.
            </p>

            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Görsel</th>
                        <th>Ad Soyad</th>
                        <th>Ünvan</th>
                
                        <th style="width:120px;" class="text-end">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model ?? new List<BakerUI.Dto.ChefDto.ResultChefDto>())
                    {
                        <tr>
                            <td>
                                @if (!string.IsNullOrEmpty(item.ImageUrl))
                                {
                                    <img src="@item.ImageUrl" style="width:60px;height:60px;object-fit:cover;border-radius:8px;" />
                                }
                                else
                                {
                                    <span>Görsel yok</span>
                                }
                            </td>

                            <td>@item.Name</td>
                            <td>@item.Title</td>

                          

                            <!-- ✅ ICON ACTIONS -->
                            <td class="text-end">
                                <a href="/Chef/UpdateChef/@item.ChefId"
                                   title="Düzenle"
                                   class="me-2">
                                    <i class="mdi mdi-pencil text-primary"></i>
                                </a>

                                <a href="/Chef/DeleteChef/@item.ChefId"
                                   onclick="return confirm('Şefi silmek istediğine emin misin?');"
                                   title="Sil">
                                    <i class="mdi mdi-delete text-danger"></i>
                                </a>
                            </td>

                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>
</div>
