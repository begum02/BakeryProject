@model BakerUI.Dto.TestimonialDto.CreateTestimonialDto

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yorum Ekle</h4>
            <p class="card-description">Yeni müşteri yorumu oluştur</p>

            <form asp-controller="Testimonial" asp-action="CreateTestimonial" method="post" class="forms-sample">

                <div class="form-group">
                    <label>Ad Soyad *</label>
                    <input asp-for="NameSurname" class="form-control" />
                    <span asp-validation-for="NameSurname" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label>Ünvan *</label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label>Yorum *</label>
                    <textarea asp-for="Comment" rows="4" class="form-control"></textarea>
                    <span asp-validation-for="Comment" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label>Görsel Url</label>
                    <input asp-for="ImageUrl" class="form-control" placeholder="https://..." />
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-gradient-primary me-2">Kaydet</button>
                <a asp-controller="Testimonial" asp-action="TestimonialList" class="btn btn-light">İptal</a>

            </form>
        </div>
    </div>
</div>
