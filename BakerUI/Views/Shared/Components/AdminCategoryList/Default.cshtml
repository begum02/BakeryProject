@model List<BakerUI.Dto.CategoryDto.ResultCategoryDto>

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Kategori Listesi</h4>
            <p class="card-description">
                Kategorilere ait bilgiler aşağıda yer almaktadır.
            </p>

            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Kategori Adı</th>
                        <th>Görsel</th>
                        <th>Fiyat Aralığı</th>
                        <th>Açıklama</th>
                        <th style="width:150px;">İşlemler</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model ?? new List<BakerUI.Dto.CategoryDto.ResultCategoryDto>())
                    {
                        <tr>
                            <td>@item.CategoryName</td>

                            <td>
                                @if (!string.IsNullOrEmpty(item.ImageUrl))
                                {
                                    <img src="@item.ImageUrl" style="width:60px;height:60px;object-fit:cover;border-radius:6px;" />
                                }
                                else
                                {
                                    <span>Görsel yok</span>
                                }
                            </td>

                            <td>@item.PriceRange</td>
                            <td>@item.CategoryDescription</td>

                            <td class="text-center">
                            

                                <a href="/Category/UpdateCategory/@item.CategoryId"
                                   class="text-warning me-2"
                                   title="Güncelle">
                                    <i class="mdi mdi-pencil" style="font-size: 18px;"></i>
                                </a>

                                <a href="/Category/DeleteCategory/@item.CategoryId"
                                   class="text-danger"
                                   title="Sil"
                                   onclick="return confirm('Silmek istediğine emin misin?');">
                                    <i class="mdi mdi-delete" style="font-size: 18px;"></i>
                                </a>
                            </td>

                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>
</div>
