@model BakerUI.Dto.ProductDto.UpdateProductDto
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Ürün Güncelle</h4>
            <p class="card-description">Ürün bilgilerini düzenle</p>

            <form asp-action="UpdateProduct" method="post" class="forms-sample">

                <!-- ID göndermezsen API hangisini update edeceğini bilemez -->
                <input type="hidden" asp-for="ProductId" />

                <div class="form-group">
                    <label>Ürün Adı *</label>
                    <input asp-for="ProductName" class="form-control" />
                    <span asp-validation-for="ProductName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label>Fiyat *</label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label>Görsel Url</label>
                    <input asp-for="ImageUrl" class="form-control" />
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label>Açıklama</label>
                    <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label>Kategori Id</label>
                    <input asp-for="CategoryId" class="form-control" />
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>

                <div class="form-group form-check mt-3">
                    <label class="form-check-label">
                        <input asp-for="IsActive" class="form-check-input" />
                        Aktif
                    </label>
                </div>

                <button type="submit" class="btn btn-gradient-primary me-2">
                    Güncelle
                </button>

                <a asp-action="ProductList" class="btn btn-light">İptal</a>

            </form>
        </div>
    </div>
</div>
